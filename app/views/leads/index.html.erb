<%= render 'layouts/messages' %>
<p>
	<%= link_to "Create new lead", new_lead_path %>
</p>
<table border="1" style="border-collapse: collapse;">
	<tr>
		<th>ID</th>
		<th>Name</th>
		<th>Mobile Number</th>
		<th>Email Id</th>
		<th>Category</th>
		<th>Created_By</th>
		<th>Created At</th>
		<th>Updated At</th>
		<th colspan="3">Settings</th>
	</tr>
	<% @leads.each do |lead| %>
	<tr>
		<td><%= lead.id %></td>
		<td><%= lead.name %></td>
		<td><%= lead.phoneno %></td>
		<td><%= lead.email %></td>
		<td><%= lead.category %></td>
		<td><%= lead.user.username if lead.user %></td>
		<td><%= time_ago_in_words(lead.created_at) %> ago</td>
		<td><%= time_ago_in_words(lead.updated_at) %> ago</td>
		<td><%= link_to "Edit", edit_lead_path(lead) %></td>
		<td><%= link_to "Show", lead_path(lead) %></td>
		<td><a href=<%="/lead-delete/"+"#{lead.id}"%>>Delete</a></td>
	</tr>
	<% end %>
</table>
