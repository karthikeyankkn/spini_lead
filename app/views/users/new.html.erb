
<% if @user.errors.any? %>
	<ul>
		<% @user.errors.full_messages.each do | msg | %>
		<li><%= msg %></li>
		<% end %>
	</ul>
<% end %>

<%= form_for @user do |l| %>
	<p>
		<%= l.label :username %><br>
		<%= l.text_field :username %>
	</p>
	<p>
		<%= l.label :email %><br>
		<%= l.email_field :email %>
	</p>
	<p>
		<%= l.label :password %><br>
		<%= l.password_field :password %>
	</p>
	<p>
		<%= l.submit "Signup" %>
	</p>
<% end %>

<p>
	<%= link_to "Back to user page", users_path %>
</p>